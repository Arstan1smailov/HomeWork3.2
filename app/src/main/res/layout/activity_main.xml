<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/ed1"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="32dp"
        android:layout_height="40dp"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColorHint="@color/grey"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="32dp"
        android:background="@drawable/editextstyle"
        />
    <ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    app:layout_constraintStart_toStartOf="@id/ed1"
    android:layout_marginStart="23dp"
        android:layout_marginTop="4dp"
    app:layout_constraintTop_toTopOf="@id/ed1"
    android:background="@drawable/ic_baseline_email_24"
    />
    <EditText
        android:id="@+id/ed2"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="32dp"
        android:layout_height="40dp"
        android:hint="Theme"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textColorHint="@color/grey"
        app:layout_constraintTop_toTopOf="@id/ed1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginVertical="62dp"
        android:background="@drawable/editextstyle"
        /><ImageView
    android:layout_width="30dp"
    android:layout_height="30dp"
    app:layout_constraintStart_toStartOf="@id/ed2"
    android:layout_marginStart="23dp"
    android:layout_marginTop="4dp"
    app:layout_constraintTop_toTopOf="@id/ed2"
    android:background="@drawable/ic_baseline_font_download_24"
    /> <EditText
    android:id="@+id/ed3"
    android:layout_width="match_parent"
    android:layout_marginHorizontal="32dp"
    android:layout_height="40dp"
    android:hint="Text"
    android:textAlignment="center"
    android:textSize="30sp"
    android:textColorHint="@color/grey"
    app:layout_constraintTop_toTopOf="@id/ed2"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginVertical="60dp"
    android:background="@drawable/editextstyle"
    />
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintStart_toStartOf="@id/ed3"
        android:layout_marginStart="23dp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toTopOf="@id/ed3"
        android:background="@drawable/ic_baseline_message_24"
        />
    <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_marginHorizontal="40dp"
        android:layout_height="wrap_content"
        android:text="Send"
        android:textSize="25sp"
        android:padding="14dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>